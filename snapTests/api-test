from plugins.snapd import SnapdPlugin
from plugins.native import NativePlugin
from plugins import ProviderStorage, PopulationFilter

class DummyStorage(ProviderStorage):

    def add_item(self, id, item):
        print("New item! {} - {} ({})".format(item.get_title(), id, item.get_version()))

    def clear(self):
        pass


def snapdDemo():
    store = DummyStorage()
    plugins = [
        NativePlugin(),
        SnapdPlugin(),
    ]

    # Ask all plugins to populate with installed filter
    popfilter = PopulationFilter.INSTALLED
    for p in plugins:
        p.populate_storage(store, popfilter, None)

    # We want to be able to stop a search ...
    searchStore = DummyStorage()
    term = "vlc"
    print(" -> searching for %s" % term)
    for p in plugins:
        p.populate_storage(store, PopulationFilter.SEARCH, term)

if __name__ == "__main__":
    snapdDemo()
